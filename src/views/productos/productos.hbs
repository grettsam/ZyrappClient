<div class="d-flex justify-content-between">
  <h3>Productos</h3>
  <a href="/productos/addProductos" class="btn btn-success"><i
      class="far fa-plus-square"
    ></i>
    Nuevo producto
  </a>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="card tablaStock">
      <div class="card-body">
        <h5 class="card-title">Stock de productos</h5>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Foto</th>
              <th scope="col">Nombre</th>
              <th scope="col">Categoria</th>
              <th scope="col">Stock</th>
              <th scope="col">Valor</th>
              <th scope="col">Ventas</th>
              <th scope="col">Creación</th>
              <th scope="col">Opciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each productos}}
              <tr>
                <th scope="row">{{producto_id}}</th>
                <td><img src={{pic1_producto}} /></td>
                <td>{{nombre}}</td>
                <td>{{categoria}}</td>
                <td>{{stock}}</td>
                <td>{{valor}}</td>
                {{#if cantidadVentas}}
                  <td>{{cantidadVentas}}</td>
                {{else}}
                  <td>0</td>
                {{/if}}
                <td>{{timeago creacion}}</td>
                <td>
                  <a
                    href="/productos/moreProductos/{{producto_id}}"
                    class="btn btn-success"
                  ><i class="fas fa-seedling"></i></a>
                  <a
                    href="/productos/editProductos/{{producto_id}}"
                    class="btn btn-info"
                  ><i class="fas fa-user-edit"></i></a>
                  <a
                    href="/productos/deleteProductos/{{producto_id}}"
                    class="btn btn-danger"
                  ><i class="far fa-trash-alt"></i></a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-6 mt-4 productos-slider">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Productos más vendidos</h4>
        <div class="item-slider">
          {{! Hay que cambiar el nombre de abajo ya que tiene que mostrar los mas vendidos }}
          {{#each masVendidos}}
            <div class="producto-item">
              <img src={{pic1_producto}} />
              <p>{{nombre}}<br />
                {{#if cantidadVentas}}
                  {{cantidadVentas}}
                {{else}}
                  0
                {{/if}}
                unidades</p>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <div class="col-6 mt-4 productos-slider">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Productos menos vendidos</h4>
        <div class="item-slider">
          {{! Hay que cambiar el nombre de abajo ya que tiene que mostrar los menos vendidos }}
          {{#each menosVendidos}}
            <div class="producto-item">
              <img src={{pic1_producto}} />
              <p>{{nombre}}<br />
                {{#if cantidadVentas}}
                  {{cantidadVentas}}
                {{else}}
                  0
                {{/if}}
                unidades</p>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

</div>